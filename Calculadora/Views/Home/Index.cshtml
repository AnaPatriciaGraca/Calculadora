@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Calculadora</h1>
</div>


@* esta linha de comentario fica na view e nao aparece no browser *@
@* código da interface da minha calculadora *@
<form method="post">
    @*variaveis para "criar" memoria no HTTP*@
    <input type="hidden" value="@ViewBag.Operador" name="operador" />
    <input type="hidden" value="@ViewBag.PrimeiroOperando" name="primeiroOperando" />
    <input type="hidden" value="@ViewBag.LimpaVisor" name="limpaVisor" />


    @*desenho da calculadora*@
    <table>
        <tr>
            <td colspan="4">
                <input type="text" name="visor" readonly="readonly" value="@ViewBag.Visor" style="text-align:right" />  @*vamos usar INPUT porque tem contorno (visor da calculadora)*@
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="C" name="bt" />
            </td>
            <td colspan="2">
                <input type="submit" value="+/-" name="bt" />
            </td>
            <td>
                <input type="submit" value=":" name="bt" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="7" name="bt" />
            </td>
            <td>
                <input type="submit" value="8" name="bt" />
            </td>
            <td>
                <input type="submit" value="9" name="bt" />
            </td>
            <td>
                <input type="submit" value="x" name="bt" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="4" name="bt" />
            </td>
            <td>
                <input type="submit" value="5" name="bt" />
            </td>
            <td>
                <input type="submit" value="6" name="bt" />
            </td>
            <td>
                <input type="submit" value="-" name="bt" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="1" name="bt" />
            </td>
            <td>
                <input type="submit" value="2" name="bt" />
            </td>
            <td>
                <input type="submit" value="3" name="bt" />
            </td>
            <td>
                <input type="submit" value="+" name="bt" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="0" name="bt" />
            </td>
            <td>
                <input type="submit" value="," name="bt" />
            </td>
            <td>
                <input type="submit" value="=" name="bt" />
            </td>
        </tr>
    </table>
</form>
